{
  "name": "autodoc-lite",
  "displayName": "AutoDoc Lite",
  "description": "Genera comentarios automáticos para tu código con un clic. ¡Olvídate de escribirlos a mano!",
  "version": "1.0.0",
  "publisher": "tuusuario", 
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
  "onCommand:autodoc-lite.generateComment"
],

  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autodoc-lite.generateComment",
        "title": "AutoDoc Lite: Generar comentario"
      }
    ]
  },
  "galleryBanner": {
    "color": "#1E1E1E",
    "theme": "dark"
  },
  "icon": "images/icon.png",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "vscode": "^1.85.0",
    "@types/node": "^20.4.2"
  }
}
